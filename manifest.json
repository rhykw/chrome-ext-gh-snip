{
	"manifest_version": 2,
	"name": "Github Issue Template Generator",
	"description": "Chrome Extension: Github Issue Template Generator",
	"version": "0.01",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Issue Template Generator"
	},
	"content_scripts": [
		{
			"matches":  ["https://*/*/issues/new","https://*/*/issues/new?*"],
			"js": ["contentscript.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"permissions": [
		"tabs"
	]
}
